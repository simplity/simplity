<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<record
	xmlns="http://www.simplity.org/schema"
	name="fixed"
	moduleName="files"
	forFixedWidthRow="true"
	recordType="structure"	
>
	<fields>
		<field
			name="id"
			dataType="_number"
			fieldWidth="2"
			isRequired="true" messageName="kernel.invalidData"/>
		<field
			name="name"
			dataType="_text"
			fieldWidth="5" />
		<field
			name="address"
			dataType="_text"
			fieldWidth="5" />
		
	</fields>
</record>
