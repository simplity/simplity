<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<dbView
  xmlns="http://www.simplity.org/schema"
  name="petDetail"
  moduleName="pet"
  tableName="pet_details"
  defaultRefRecord="pet.pet"
  childrenToBeRead="pet.visit"
  defaultSheetName="petDetails"
>
  <fields>
    <primaryKey
      name="petId"
      externalName="pet_id"
      valueType="integer" />
    <parentKey
      name="ownerId"
      valueType="integer"
      referredRecord="pet.owner"
      externalName="owner_id" />
    <viewField
      name="petName"
      valueType="text"
      externalName="pet_name" />
    <viewField
      name="petDob"
      externalName="birth_date"
      valueType="text"
      />
    <viewField
      name="petTypeId"
      valueType="text"
      externalName="type_id" />
    <viewField
      name="petType"
      valueType="text"
      externalName="pet_type"
      referredRecord="pet.petType" />
    <viewField
      name="firstName"
      valueType="text"
      externalName="first_name"
      referredRecord="pet.owner" />
    <viewField
      name="lastName"
      valueType="text"
      externalName="last_name"
      referredRecord="pet.owner" />
  </fields>
</dbView>
