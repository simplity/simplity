<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="filterOwnersJava"
	moduleName="pet"
	description="Demonstrates use of java code to implement a service with the help of Simplity components"
>

	<inputData>
		<inputRecords>
			<inputRecord
				recordName="pet.owner"
				purpose="filter" />
		</inputRecords>
	</inputData>
<processor><transactionProcessor dbUsage="readOnly">
	<actions>
		<!-- complexLogic is does logic and i/o while logic is meant for pure logic -->
		<logicWithDbAccess className="org.simplity.pet.action.FilterOwners" />
	</actions>
</transactionProcessor></processor>
	<outputData>
		<outputRecords>
			<outputRecord name="owners" />
			<!-- child table is to be output as child pf parent rows -->
			<outputRecord 
				name="petDetails"
				parentSheetName="owners"
				linkFieldsInParentSheet="ownerId"
				linkFieldsInThisSheet="ownerId" />
		</outputRecords>
	</outputData>
</service>
